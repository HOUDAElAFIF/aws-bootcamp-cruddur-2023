#! /usr/bin/bash
set -e # stop if it fails at any point

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-setup"
printf "${CYAN}==== ${LABEL}${NO_COLOR}\n"

bin_path="$(realpath .)/bin"

source "$bin_path/db/db_drop"
source "$bin_path/db/db_create"
source "$bin_path/db/db_schema_load"
source "$bin_path/db/db_seed"
source "$bin_path/db/db_update_cognito_user_ids"